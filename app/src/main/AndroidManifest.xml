<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChallengeIt"
        tools:targetApi="31">
        <activity
            android:name=".LeaderboardActivity"
            android:exported="false"
            android:label="@string/title_activity_leaderboard"
            android:theme="@style/Theme.ChallengeIt" />
        <activity
            android:name=".NewGroupActivity"
            android:exported="false"
            android:label="@string/title_activity_new_group"
            android:theme="@style/Theme.ChallengeIt" />
        <activity
            android:name=".PublicGroupActivity"
            android:exported="false"
            android:label="@string/title_activity_public_group"
            android:theme="@style/Theme.ChallengeIt" />
        <activity
            android:name=".PrivateGroupActivity"
            android:exported="false"
            android:label="@string/title_activity_private_group"
            android:theme="@style/Theme.ChallengeIt" />
        <activity
            android:name=".JoinGroupActivity"
            android:exported="false"
            android:label="@string/title_activity_join_group"
            android:theme="@style/Theme.ChallengeIt" />
        <activity
            android:name=".ChallengeActivity"
            android:exported="false"
            android:label="@string/title_activity_challenge"
            android:theme="@style/Theme.ChallengeIt" />
        <activity
            android:name=".GroupActivity"
            android:exported="false"
            android:label="@string/title_activity_group"
            android:theme="@style/Theme.ChallengeIt" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.ChallengeIt" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ChallengeIt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>